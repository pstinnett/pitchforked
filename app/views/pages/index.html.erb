<div id="wrapper">
	<div id="header">
		<div id="title">
			<h1>Pitchforked<sup>beta</sup></h1>
		</div>
		<div id="loading">
		</div>
	</div>
	<div id="playerarea">
		<div id="mytrack">
			<%= 
				link_to_remote "Play",
					:url => { :action => "next_track" },
					:update => { :success => "mytrack", :failure => "error" },
					:html => { :class => "play_link" }
			%>
		</div>

	</div> 
<div id="jplayer_info"></div> 
<div class="credits">
	<p>Tracks courtesy of <a href="http://www.8tracks.com/">8tracks.com</a></p>
	<p>Inspired by <a href="http://www.zachklein.com/">Zach Klein</a></p>
	<p>Developed by <a href="http://www.pstinnett.com">Patrick Stinnett</a></p>
</div>
	<br style="clear:both;"/>
		<div id="control-template"> 
	  <!-- control markup inserted dynamically after each link --> 
	  <div class="controls"> 
	   <div class="statusbar"> 
	    <div class="loading"></div> 
	     <div class="position"></div> 
	   </div> 
	  </div> 
	  <div class="timing"> 
	   <div id="sm2_timing" class="timing-data"> 
	    <span class="sm2_position">%s1</span> / <span class="sm2_total">%s2</span></div> 
	  </div>
	  <div class="peak"> 
	   <div class="peak-box"><span class="l"></span><span class="r"></span> 
	   </div> 
	  </div> 
	 </div> 

	 <div id="spectrum-container" class="spectrum-container"> 
	  <div class="spectrum-box"> 
	   <div class="spectrum"></div> 
	  </div> 
	 </div>
	</div>