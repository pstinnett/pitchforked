<div id="wrapper">
	<div id="header">
		<div id="title">
			<h1>Pitchforked</h1>
		</div>
	</div>
		<div id="mytrack">
			<p class="intro">Pitchforked creates a random playlist of tracks from Pitchfork.com's Best New Music section. <br /><br />Press 
			<%= 
				link_to_remote "Play",
					:url => { :action => "next_track" },
					:update => { :success => "mytrack", :failure => "error" },
					:html => { :class => "play_link" }
			%> to listen.</p>
		<div id="track_id" style="display:hidden"></div>
		</div>

		<div id="prev_track"></div>
				<br style="clear:both;"/>		<br style="clear:both;"/>		<br style="clear:both;"/>
				<p>load track into previous <a class="play_link" href="#" onclick="load_prev()">click</a></p>
	<div id="control-template"> 
	  <!-- control markup inserted dynamically after each link --> 
	  <div class="controls"> 
	   <div class="statusbar"> 
	    <div class="loading"></div> 
	     <div class="position"></div> 
	   </div> 
	  </div> 
	  <div class="timing"> 
	   <div id="sm2_timing" class="timing-data"> 
	   </div> 
	  </div>
	  <div class="peak"> 
	   <div class="peak-box"><span class="l"></span><span class="r"></span> 
	   </div> 
	  </div> 
	 </div> 

	 <div id="spectrum-container" class="spectrum-container"> 
	  <div class="spectrum-box"> 
	   <div class="spectrum"></div> 
	  </div> 
	 </div>
	</div>
	<script type="text/javascript">
	function load_prev() {
		new Ajax.Updater({success:'prev_track',failure:'error'}, '/pages/prev_track/'+$('track_id').innerHTML, {asynchronous:true, evalScripts:true, insertion:'top'}); return false;}
	</script>