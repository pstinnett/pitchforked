<div id="wrapper">
	<div id="header">
		<div id="title">
			<h1 style="float:left;">Pitchforked</h1>
			<p class="about"><a href="/about" style="float:right;">info</a></p>
		</div>
	</div>
		<div id="mytrack">
			<p class="intro">Pitchforked creates a random playlist of tracks from Pitchfork.com's Best New Music section.
			<p class="normal"><strong>Press 
			<%= 
				link_to_remote "Play",
					:url => { :action => "next_track" },
					:update => { :success => "mytrack", :failure => "error" },
					:html => { :class => "play_link" }
			%> to listen.</strong></p>
			<div id="track_id" style="display:hidden"></div>
		</div>
		<div id="prev_track"></div>
	<div id="control-template"> 
	  <!-- control markup inserted dynamically after each link --> 
	  <div class="controls" onmouseover="showtiming()" onmouseout="hidetiming()"> 
	   <div class="statusbar"> 
	    <div class="loading"></div> 
	     <div class="position"></div> 
	   </div> 
	  </div> 
	  <div class="timing" id="timing"> 
		      <div id="sm2_timing" class="timing-data"><span class="sm2_position">%s1</span> / <span class="sm2_total">%s2</span></div>
	  </div>
	  <div class="peak"> 
	   <div class="peak-box"><span class="l"></span><span class="r"></span> 
	   </div> 
	  </div> 
	 </div> 

	 <div id="spectrum-container" class="spectrum-container"> 
	  <div class="spectrum-box"> 
	   <div class="spectrum"></div> 
	  </div> 
	 </div>
	</div>
<%= javascript_include_tag 'pitchforked' %>